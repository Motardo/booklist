<div class="page-header">
  <h1><%= "#{@books.length} Books" %></h1>
</div>

<div>
  <div>
    <div class='row'>
      <div class='col-xs-6 strech'><%= sortable 'title', 'Title' %></div>
      <div class='col-xs-2 strech'><%= sortable 'auth', 'Author' %></div>
      <div class='col-xs-4 strech'><%= sortable 'read_date', 'Read' %></div>
    </div>
  </div>
  <div>
    <% @books.each do |book| %>
      <div class='row'>
        <%= link_to h(book.title.titleize), book_path(book), class: 'btn btn-default col-xs-6' %>
        <%= link_to h(book.auth), author_path(book.author_id), class: 'btn btn-default col-xs-2' %>
        <div class='col-xs-4'><%= "#{time_ago_in_words l book.read_date} ago" %></div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Add New Book',
            new_book_path,
            :class => 'btn btn-primary' %>
<%= link_to 'Add New Author',
            new_author_path,
            :class => 'btn btn-primary' %>
