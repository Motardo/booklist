<%- model_class = Book -%>
<div class="page-header">
  <h1><%= @book.title.titleize %></h1>
</div>
<h2><%= @author.name %></h2>
<% @book.author_id = @author.id %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_published) %>:</strong></dt>
  <dd><%= @book.year_published %></dd>
  <dt><strong><%= model_class.human_attribute_name(:read_date) %>:</strong></dt>
  <dd><%= @book.read_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author_id) %>:</strong></dt>
  <dd><%= @book.author_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this book?')) },
              :class => 'btn btn-danger' %>
