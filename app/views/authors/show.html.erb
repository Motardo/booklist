<%- model_class = Author -%>
<div class="page-header">
  <h1><%=t '.title', :default => "#{@author.first_name} #{@author.last_name}".titleize %></h1>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              authors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_author_path(@author), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              author_path(@author),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this author?')) },
              :class => 'btn btn-danger' %>


<div>
  <h2>Books</h2>
  <div class='row'>
    <div class='col-xs-8 strech'><%= sortable 'title', 'Title' %></div>
    <div class='col-xs-4 strech'><%= sortable 'read_date', 'Date Read' %></div>
  </div>
  <div id='books'>
    <% @books.each do |book| %>
      <div class='row'>
        <%= link_to h(book.title), author_book_path(@author, book), class: 'btn btn-default col-xs-8' %>
        <div class='col-xs-4'><%= "#{time_ago_in_words l book.read_date} ago" %></div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Add book for #{@author.name}",
            new_author_book_path(@author.id),
            :class => 'btn btn-primary' %>

