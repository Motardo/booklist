<%- model_class = Author -%>
<div class="page-header">
  <h1><%=t '.title', :default => "#{@author.firstName} #{@author.lastName}".titleize %></h1>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              authors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_author_path(@author), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              author_path(@author),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>


<div>
<h2>Books</h2>
  <div id=books>
    <% @author.books.each do |book| %>
      <div class='row'>
        <%= link_to h(book.title), author_book_path(@author, book), class: 'btn btn-default col-xs-8' %>
        <div class='col-xs-4'><%= "#{time_ago_in_words l book.created_at} ago" %></div>
      </div>
    <% end %>
  </div>
</div>

