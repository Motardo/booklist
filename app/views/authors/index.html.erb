<%- model_class = Author -%>
<div class="page-header">
  <h1>Authors</h1>
</div>
<div class="table table-striped">
  <div>
    <div class='row'>
      <div class='col-xs-8'><%= sortable 'last_name', 'Name' %></div>
      <div class='col-xs-4'><%= sortable 'recent', 'Last Read' %></div>
    </div>
  </div>
  <div>
    <% @authors.each do |author| %>
      <div class='row'>
        <%= link_to h("#{author.last_name}, #{author.first_name}"), author_path(author), class: 'btn btn-default col-xs-8' %>
        <div class='col-xs-4'><%= "#{time_ago_in_words l author.last_read} ago" %></div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add New Author',
            new_author_path,
            :class => 'btn btn-primary' %>
