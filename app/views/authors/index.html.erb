<%- model_class = Author -%>
<div class="page-header">
  <h1>Authors</h1>
</div>
<div class="table table-striped">
  <div>
    <div class='row'>
      <div class='col-xs-8'>Name</div>
      <div class='col-xs-4'>Last Modified</div>
    </div>
  </div>
  <div>
    <% @authors.each do |author| %>
      <div class='row'>
        <%= link_to h("#{author.lastName}, #{author.firstName}"), author_path(author), class: 'btn btn-default col-xs-8' %>
        <div class='col-xs-4'><%= "#{time_ago_in_words l author.created_at} ago" %></div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add New Author',
            new_author_path,
            :class => 'btn btn-primary' %>
