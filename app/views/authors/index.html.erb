<%- model_class = Author -%>
<div class="page-header">
  <h1><%= "#{@authors.length} Authors" %>

<%= link_to 'Add New',
            new_author_path,
            :class => 'btn btn-primary' %></h1>
</div>
<div>
  <div>
    <div class='row'>
      <div class='col-xs-8 strech'><%= sortable 'last_name', 'Name' %></div>
      <div class='col-xs-4 strech'><%= sortable 'recent', 'Last Read' %></div>
    </div>
  </div>
  <div>
    <% @authors.each do |author| %>
      <div class='row'>
        <%= link_to h("#{author.last_name}, #{author.first_name}").titleize, author_path(author), class: 'btn btn-default col-xs-8' %>
        <div class='col-xs-4'><%= author.read %></div>
      </div>
    <% end %>
  </div>
</div>
